<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayerStatsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#D3251B"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="66dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/arsenal_fc" />

        <TextView
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ARSENAL"
            android:textColor="#F3F0F0"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#101330"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_margin="5dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/adidas_logo_white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/emerates_logo1" />

        <ImageView
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/arsenal_visit_rwanda" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#070707"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp">

            <VideoView
                android:id="@+id/playerVideoView"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#101330"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MATCH FIT"
                android:textColor="#F3F0F0"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Player Stats"
                    android:textColor="#070707"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="#101330"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:text="ARSENAL CAREER"
                    android:textColor="#F3F0F0"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#070707" />

            <WebView
                android:id="@+id/detail_web_view"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:layout_margin="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_x="185dp"
                    android:layout_y="28dp"
                    android:orientation="vertical"></LinearLayout>
            </WebView>

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#070707" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/getWebUrlData"
                    android:layout_width="44dp"
                    android:layout_height="51dp"
                    android:background="@drawable/arsenal_fc" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="MORE"
                    android:textColor="#D3251B"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="4dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>